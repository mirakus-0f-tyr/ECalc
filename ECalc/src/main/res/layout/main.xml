<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<AbsoluteLayout
	android:id="@+id/calc_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
<!--	xmlns:android="http://schemas.android.com/apk/res/android"     -->

<EditText
	android:id="@+id/sn1"
	android:layout_width="138dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="0dp"
	android:layout_y="2dp" 
	android:hint="S/N"
	android:inputType="textCapCharacters"
	android:imeOptions="actionDone"
	android:selectAllOnFocus="true"	/>
<EditText
	android:id="@+id/sv1"
	android:layout_width="56dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="140dp"
	android:layout_y="2dp" 
	android:hint="S.V."
	android:inputType="number"
	android:selectAllOnFocus="true"
	android:imeOptions="actionDone" />
<EditText
	android:id="@+id/ev1"
	android:layout_width="56dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="200dp"
	android:layout_y="2dp" 
	android:hint="E.V."
	android:inputType="number"
	android:selectAllOnFocus="true"
	android:imeOptions="actionDone" />
<EditText
	android:id="@+id/sn2"
	android:layout_width="138dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="0dp"
	android:layout_y="52dp" 
	android:hint="S/N"
	android:inputType="textCapCharacters"
	android:imeOptions="actionDone"
	android:selectAllOnFocus="true" />
<EditText
	android:id="@+id/sv2"
	android:layout_width="56dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="140dp"
	android:layout_y="52dp" 
	android:hint="S.V."
	android:inputType="number"
	android:selectAllOnFocus="true"
	android:imeOptions="actionDone" />
<EditText
	android:id="@+id/ev2"
	android:layout_width="56dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="200dp"
	android:layout_y="52dp" 
	android:hint="E.V."
	android:inputType="number"
	android:selectAllOnFocus="true"
	android:imeOptions="actionDone" />
<Spinner
	android:id="@+id/config_spinner"
	android:layout_width="120dp"
	android:layout_height="wrap_content"
	android:layout_x="10dp"
	android:layout_y="102dp" />
<Button
	android:id="@+id/sdate_button"
	android:layout_width="125dp"
	android:layout_height="wrap_content"
	android:layout_x="0dp"
	android:layout_y="162dp" />
<Button
	android:id="@+id/stime_button"
	android:layout_width="90dp"
	android:layout_height="wrap_content"
	android:layout_x="130dp"
	android:layout_y="162dp" />
<Button
	android:id="@+id/edate_button"
	android:layout_width="125dp"
	android:layout_height="wrap_content"
	android:layout_x="0dp"
	android:layout_y="212dp" />
<Button
	android:id="@+id/etime_button"
	android:layout_width="90dp"
	android:layout_height="wrap_content"
	android:layout_x="130dp"
	android:layout_y="212dp" />
<Spinner
	android:id="@+id/state_spinner"
	android:layout_width="120dp"
	android:layout_height="wrap_content"
	android:layout_x="10dp"
	android:layout_y="262dp" />
<CheckBox
	android:id="@+id/manual_gamma_checkbox"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Unlock Gamma"
	android:layout_x="140dp"
	android:layout_y="262dp" />
<EditText
	android:id="@+id/gamma_textbox"
	android:layout_width="62dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="0dp"
	android:layout_y="322dp"
	android:imeOptions="actionDone"
	android:inputType="numberDecimal" 
	android:selectAllOnFocus="true" />
<EditText
	android:id="@+id/elev_textbox"
	android:layout_width="89dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="120dp"
	android:hint="Elev."
	android:inputType="number"
	android:layout_y="322dp"
	android:selectAllOnFocus="true" />
<CheckBox
	android:id="@+id/intl_units_checkbox"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Use SI Units"
	android:layout_x="140dp"
	android:layout_y="112dp" />
<Button
	android:id="@+id/calculate_button"
	android:layout_width="108dp"
	android:layout_height="wrap_content"
	android:text="Calculate"
	android:layout_x="40dp"
	android:layout_y="382dp" 
	android:onClick="CalculateRadon" />
<Button
	android:id="@+id/clear_button"
	android:layout_width="108dp"
	android:layout_height="wrap_content"
	android:text="Clear"
	android:layout_x="170dp"
	android:layout_y="382dp" 
	android:onClick="ClearAll" />
<TextView
	android:id="@+id/start_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Start Test"
	android:layout_x="220dp"
	android:layout_y="172dp" />
<TextView
	android:id="@+id/end_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="End Test"
	android:layout_x="220dp"
	android:layout_y="222dp" />
</AbsoluteLayout>
</ScrollView>
